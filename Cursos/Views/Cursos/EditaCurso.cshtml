@model dynamic



<html>
<head>

    <title>Editar Usuario</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
          rel="stylesheet" />
    <link href="~/Recursos/CSS/EstilosForm.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="wrapper">
            <div class="formcontent">
                <!-- Pills content -->
                <div class="tab-content">

                    <form action="@Url.Action("EditaCurso", "Cursos")" method="post">

                        <!-- ID input -->
                        <div class="form-outline mb-4">
                            <input type="hidden" name="id" id="id" class="form-control" value="@Model.curso.id" />
                        </div>


                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="Nombre" id="Nombre" class="form-control" value="@Model.curso.nombre" />
                            <label class="form-label" for="Nombre">Nombre</label>
                        </div>

                        <!-- Mod input --> 
                       
                            <select class="form-select" name="Modalidad" aria-label="Default select example" required>
                                @foreach (var mod in Model.modalidad)
                                {
                                    <option value="@mod.id">@mod.modalidad1</option>
                                }
                            </select>
                        
                        <br />

                            <!-- Username input -->
                            <div class="form-outline mb-4">
                                <input type="text" name="Lugar" id="Lugar" class="form-control" value="@Model.curso.lugar" />
                                <label class="form-label" for="Lugar">Lugar</label>
                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="number" name="Horas" id="Horas" class="form-control" value="@Model.curso.horas" />
                                <label class="form-label" for="Horas">Horas</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input type="number" name="Costo" id="Costo" class="form-control" value="@Model.curso.costo" />
                                <label class="form-label" for="Costo">Costo</label>
                            </div>

                            <!-- Confirm Password input -->
                            <div class="form-outline mb-4">
                                <input type="number" name="CostoPref" id="CostoPref" class="form-control" value="@Model.curso.costoPref" />
                                <label class="form-label" for="CostoPref">Costo Preferencial</label>
                            </div>

                            <!-- Username input -->
                            <div class="form-outline mb-4">
                                <input type="url" name="UrlTemario" id="UrlTemario" class="form-control" value="@Model.curso.urlTemario" />
                                <label class="form-label" for="UrlTemario">Temario</label>
                            </div>

                            <!-- Username input -->
                            <div class="form-outline mb-4">
                                <input type="text" name="Requisitos" id="Requisitos" class="form-control" value="@Model.curso.requisitos" />
                                <label class="form-label" for="Requisitos">Requisitos</label>
                            </div>

                            <!-- Username input -->
                            <div class="form-outline mb-4">
                                <input type="text" name="CriterioEval" id="CriterioEval" class="form-control" value="@Model.curso.criterioEval" />
                                <label class="form-label" for="CriterioEval">Criterio de Evaluacion</label>
                            </div>

                            <div class="form-outline mb-4">
                                <label for="img">Seleccione una imagen:</label>
                                <input type="file" id="ImgUrl" name="ImgUrl" accept="image/*">
                            </div>

                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            }

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-3">Actualizar Curso</button>

                            <button type="button" class="btn btn-danger btn-block mb-3"><a href="@Url.Action("Tablas", "Admin")">Cancelar</a></button>
</form>

                </div>
                <!-- Pills content -->
            </div>
        </div>
    </div>
</body>


<!-- MDB -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js">
</script>
</html>