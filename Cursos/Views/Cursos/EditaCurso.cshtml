@using Cursos.Models

@{ 
    var curso = ViewBag.curso;
}


<html>
<head>

    <title>Editar Usuario</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
          rel="stylesheet" />
    <link href="~/Recursos/CSS/EstilosForm.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="wrapper">
            <div class="formcontent">
                <!-- Pills content -->
                <div class="tab-content">

                    <form action="@Url.Action("EditaCurso", "Cursos")" method="post">

                        <!-- ID input -->
                        <div class="form-outline mb-4">
                            <input type="hidden" name="id" id="id" class="form-control" value="@curso.id" />
                        </div>


                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="nombre" id="nombre" class="form-control" value="@curso.nombre" />
                            <label class="form-label" for="nombre">Nombre</label>
                        </div>

                        <!-- Mod input -->
                        <select class="form-select" name="idModaliad" aria-label="Default select example">
                            <option value="@curso.modalidad">@curso.modalidad.modalidad1</option>
                            <option value="1">PRESENCIAL</option>
                            <option value="2">REMOTO</option>
                        </select>
                        <br />

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="lugar" id="lugar" class="form-control" value="@curso.lugar" />
                            <label class="form-label" for="lugar">Lugar</label>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="number" name="horas" id="horas" class="form-control" value="@curso.horas" />
                            <label class="form-label" for="horas">Horas</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="date" name="fechaIni" id="fechaIni" class="form-control" value="@curso.fechaIni.ToString("dd-mm-yyyy")"/>
                            <label class="form-label" for="fechaIni">Fecha de Inicio</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="date" name="fechaTer" id="fechaTer" class="form-control" value="@curso.fechaTer.ToString("dd-mm-yyyy")" />
                            <label class="form-label" for="fechaTer">Fecha de Conclusion</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="number" name="costo" id="costo" class="form-control" value="@curso.costo" />
                            <label class="form-label" for="Costo">Costo</label>
                        </div>

                        <!-- Confirm Password input -->
                        <div class="form-outline mb-4">
                            <input type="number" name="costoPref" id="costoPref" class="form-control" value="@curso.costoPref" />
                            <label class="form-label" for="CostoPref">Costo Preferencial</label>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="url" name="urlTemario" id="urlTemario" class="form-control" value="@curso.urlTemario" />
                            <label class="form-label" for="urlTemario">Temario</label>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="requisitos" id="requisitos" class="form-control" value="@curso.requisitos" />
                            <label class="form-label" for="requisitos">Requisitos</label>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="criterioEval" id="criterioEval" class="form-control" value="@curso.criterioEval" />
                            <label class="form-label" for="CriterioEval">Criterio de Evaluacion</label>
                        </div>

                        <div class="form-outline mb-4">
                            <label for="img">Seleccione una imagen:</label>
                            <input type="file" id="imgUrl" name="imgUrl" accept="image/*">
                            <input type="button" id="upload" value="Guardar Imagen" />
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-3">Actualizar Curso</button>

                        <button type="button" class="btn btn-danger btn-block mb-3"><a href="@Url.Action("Tablas", "Admin")">Cancelar</a></button>
                    </form>

                </div>
                <!-- Pills content -->
            </div>
        </div>
    </div>
</body>
<!-- MDB -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js">
</script>
</html>