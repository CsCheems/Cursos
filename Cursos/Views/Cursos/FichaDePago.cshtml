@model dynamic


<html>
<head>

    <title>Solicitud de Curso</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
          rel="stylesheet" />
    <link href="~/Recursos/CSS/EstilosForm.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="wrapper">
            <div class="formcontent">
                <!-- Pills content -->
                <div class="tab-content">

                    <form action="" method="post">

                        <h3>Universidad Tecnológica de Querétaro</h3>
                        <h4>Resumen de solicitud de pago.</h4>
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Name input -->
                                <div class="form-outline mb-4">
                                    <input type="text" name="Nombre" id="Nombre" class="form-control" value="@Model.usuario.nombre" disabled/>
                                    <label class="form-label" for="Nombre">Nombre</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Lastname input -->
                                <div class="form-outline mb-4">
                                    <input type="text" name="Apellido" id="Apellido" class="form-control" value="" disabled/>
                                    <label class="form-label" for="Apellido">Apellido</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <!-- Name input -->
                                <div class="form-outline mb-4">
                                    <input type="text" name="Curso" id="Curso" class="form-control" disabled/>
                                    <label class="form-label" for="Curso">Curso</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <!-- Lastname input -->
                                <div class="form-outline mb-4">
                                    <input type="text" name="fechaSolicitud" id="fechaSolicitud" class="form-control" disabled/>
                                    <label class="form-label" for="fechaSolicitud">Fecha de Solicitud</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <!-- Lastname input -->
                                <div class="form-outline mb-4">
                                    <input type="text" name="fechaVenc" id="fechaVenc" class="form-control" disabled/>
                                    <label class="form-label" for="fechaVenc">Fecha de Vencimiento</label>
                                </div>
                            </div>
                        </div>

                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Cantidad</th>
                                    <th>Concepto</th>
                                    <th>Descripcion</th>
                                    <th>Monto</th>
                                    <th>Total</th>

                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>

                        <!-- Role input -->
                        <select onchange="modSelect('showFacturaInfo', this)" class="form-select" name="Modalidad" aria-label="Default select example">
                            <option selected>¿Requiere Factura?</option>
                            <option value="1">Si</option>
                            <option value="2">No</option>
                        </select>

                        <br />

                        <div style="display:none" id="showFacturaInfo">
                            <!-- Place input -->
                            <div class="form-outline mb-4">
                                <input type="text" name="RFC" id="RFC" class="form-control" />
                                <label class="form-label" for="RFC">RFC</label>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <!-- Name input -->
                                    <div class="form-outline mb-4">
                                        <input type="text" name="codigoPostal" id="codigoPostal" class="form-control" />
                                        <label class="form-label" for="codigoPostal">Codigo Postal</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <!-- Lastname input -->
                                    <div class="form-outline mb-4">
                                        <input type="text" name="email" id="email" class="form-control" />
                                        <label class="form-label" for="email">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <!-- Lastname input -->
                                    <div class="form-outline mb-4">
                                        <input type="text" name="confirmaEmail" id="confirmaEmail" class="form-control" />
                                        <label class="form-label" for="confirmaEmail">Confirmar Email</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Place input -->
                            <div style="display:none" class="form-outline mb-4" id="showLugar">
                                <input type="number" name="telefono" id="telefono" class="form-control" />
                                <label class="form-label" for="telefono">Telefono de Contato (10 digitos - Solo numeros)</label>
                            </div>

                        </div>

                        <!-- Place input -->
                        <div style="display:none" class="form-outline mb-4" id="showLugar">
                            <input type="text" name="Lugar" id="Lugar" class="form-control" />
                            <label class="form-label" for="Lugar">Lugar del Curso</label>
                        </div>



                        <br />



                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-3">Solicitar Curso</button>
                    </form>

                </div>
                <!-- Pills content -->
            </div>
        </div>
    </div>

    <script>
        function modSelect(id, elementValue) {
            var elemento = document.getElementById(id);
            /*if (elementValue == 1) {
                elemento.removeAttribute("hidden");
            } else {
                elemento.setAttribute("hidden");
            }*/

            document.getElementById(id).style.display = elementValue.value == 1 ? 'block' : 'none';
        }

    </script>

    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js">
    </script>
</body>
</html>

