@model dynamic


@{ 
    /*  var projectPath = Directory.GetParent(Directory.GetCurrentDirectory()).Parent.FullName;
      string filePath = Path.Combine(projectPath, "Recurso/imagenes");*/
    string basePath = Server.MapPath("~");
    string imagesFolder = "\\Recursos\\imagenes\\";
    string fullPath = basePath + imagesFolder;
