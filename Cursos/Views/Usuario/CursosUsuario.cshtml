@using Cursos.Models
@using System.IO
@using System.Text

@{
    ViewBag.Title = "CursosUsuario";

    var cursos = ViewBag.cursos;
}

<html>
<head>
    <title>Mis Cursos</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
          rel="stylesheet" />

    <link href="~/Recursos/CSS/tableStyle.css" rel="stylesheet" />

    <style>
        input[type="file"] {
            display: none;
        }

        .custom-file-upload {
            border: 1px solid #ccc;
            display: inline-block;
            padding: 6px 12px;
            cursor: pointer;
        }

            .custom-file-upload:hover {
                background-color: #ddd;
            }
    </style>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>Mis Cursos</h2>
                    <p>
                        Aqui puedes observar todos los cursos que has adquirido y los que estan pendientes de pago.
                    </p>
                </div>
            </div>
        </div>

        <h4>
            <b>Pendientes de pago</b>
        </h4>
        <div class="tab-content">
            <div class="table-wrapper">
                <form action="@Url.Action("CargaDocumentos", "Cursos")" method="post" enctype="multipart/form-data">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th hidden>IdCursoUsuario</th>
                                <th hidden>Id</th>
                                <th>Nombre</th>
                                <th>Modalidad</th>
                                <th>Lugar</th>
                                <th>Horas</th>
                                <th>Comprobante de Pago</th>
                                <th>Accion</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var obj in cursos)
                            {

                                if (obj.idEstatus == 2)
                                {

                                    <tr>
                                        <td hidden>@obj.id</td>
                                        <td hidden>@obj.idCurso</td>
                                        <td>@obj.nombreCurso</td>
                                        <td>@obj.modalidad1</td>
                                        <td>@obj.lugar</td>
                                        <td>@obj.horas horas</td>
                                        <td>
                                            <label for="comprobante" class="custom-file-upload">Subir</label>
                                            <input id="comprobante" type="file" name="comprobantePago" accept=".pdf">
                                        </td>
                                        <td>
                                            <button type="submit" class="btn btn-primary btn-block mb-3">Cargar Documentos</button>
                                        </td>
                                    </tr>

                                }

                            }

                        </tbody>
                    </table>
                </form>

                @if (IsPost) 
                {
                    HttpPostedFileBase pdf1 = Request.Files["comprobantePago"];
                    if(pdf1 != null && pdf1.ContentLength > 0)
                    {
                        byte[] pdfBytes;
                        using (var ms = new MemoryStream())
                        {
                            pdf1.InputStream.CopyTo(ms);
                            pdfBytes = ms.ToArray();
                        }
                        string base64String = Convert.ToBase64String(pdfBytes);
                        byte[] requestData = Encoding.UTF8.GetBytes(base64String);
                    }
                }

                <div class="clearfix">
                    <!-- Paginacion -->
                    <ul class="pagination">
                    </ul>
                </div>
            </div>
        </div>

        <h4>
            <b>Disponibles</b>
        </h4>
        <div class="tab-content">
            <div class="table-wrapper">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th hidden>Id</th>
                            <th>Nombre</th>
                            <th>Modalidad</th>
                            <th>Lugar</th>
                            <th>Horas</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Concluye</th>
                            <th>Temario</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in cursos)
                        {
                            if (obj.idEstatus == 1)
                            {
                                <tr>
                                    <td hidden>@obj.idCurso</td>
                                    <td>@obj.nombreCurso</td>
                                    <td>@obj.modalidad1</td>
                                    <td>@obj.lugar</td>
                                    <td>@obj.horas horas</td>
                                    <td>@obj.fechaIni.ToString("dd/MM/yyyy")</td>
                                    <td>@obj.fechaTer.ToString("dd/MM/yyyy")</td>
                                    <td><a href="@obj.urlTemario">Recurso</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="clearfix">
                    <!-- Paginacion -->
                    <ul class="pagination">
                    </ul>
                </div>
            </div>
        </div>




    </div>



    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js">
    </script>

</body>

<!-- MDB -->



</html>

