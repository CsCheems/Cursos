@using Cursos.Models

@{ 
    var usuario = ViewBag.usuario;
    var estudiante = ViewBag.estudiante;
}


<html>
<head>

    <title>Editar Usuario</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css"
          rel="stylesheet" />
    <link href="~/Recursos/CSS/EstilosForm.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="wrapper">
            <div class="formcontent">
                <!-- Pills content -->
                <div class="tab-content">

                    <form action="@Url.Action("EditaUsuario", "Usuario")" method="post">

                        <input type="hidden" name="id" id="id" class="form-control" value="@usuario.id" />

                        <!-- Role input -->
                        <select class="form-select" name="rol_id" aria-label="Default select example" required>
                            <option value="@usuario.rol_id">@usuario.roles.rol</option>
                            <option value="2">ADMIN</option>
                            <option value="1">CLIENTE</option>
                        </select>

                        <br />

                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="nombre" id="nombre" class="form-control" value="@usuario.nombre" required />
                            <label class="form-label" for="nombre">Nombre</label>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="apellido" id="apellido" class="form-control" value="@usuario.apellido" required />
                            <label class="form-label" for="apellido">Apellido</label>
                        </div>

                        <label class="form-label" for="estudiante">Genero</label>
                        <select class="form-select" name="sexo_id" aria-label="Default select example">
                            <option value="@usuario.sexo_id">@usuario.sexo.sexo1</option>
                            <option value="1">MASCULINO</option>
                            <option value="2">FEMENINO</option>
                        </select>

                        <br />

                        <!-- Telefono input -->
                        <div class="form-outline mb-4">
                            <input type="text" name="telefono" id="telefono" value="@usuario.telefono" class="form-control" />
                            <label class="form-label" for="telefono">Telefono</label>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" name="email" id="email" class="form-control" value="@usuario.email" required />
                            <label class="form-label" for="email">Email</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" name="pass" id="pass" class="form-control"  required />
                            <label class="form-label" for="pass">Password</label>
                        </div>

                        <!-- Confirm Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" name="passConfirm" id="passConfirm" class="form-control"  required />
                            <label class="form-label" for="passConfirm">Confirmar Password</label>
                        </div>

                        @if (usuario.estudiante == true) { 

                            <div class="form-outline mb-4">
                                <input type="text" name="matricula" id="matricula" value="@estudiante.matricula" class="form-control" />
                                <label class="form-label" for="matricula">Matricula</label>
                            </div>

                            <div class="row">
                                <div class="col-md-8">
                                    <!-- Name input -->
                                    <div class="form-outline mb-4">
                                        <input type="text" name="carrera" id="carrera" value="@estudiante.carrera" class="form-control" />
                                        <label class="form-label" for="carrera">Carrera o Programa</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <!-- Lastname input -->
                                    <select class="form-select" name="nivelEstudios" id="estudios"  aria-label="Default select example">
                                        <option value="@estudiante.nivelEstudios">@Model.nivelEstudios</option>
                                        <option value="TSU">TSU</option>
                                        <option value="INGENIERIA">INGENIERIA</option>
                                    </select>
                                </div>
                            </div>

                        }

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-3">Actualizar Usuario</button>
                        <button type="button" class="btn btn-danger btn-block mb-3">Cancelar</button>
                    </form>

                </div>
                <!-- Pills content -->
            </div>
        </div>
    </div>
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js">
    </script>



</body>

<!-- MDB -->

</html>
